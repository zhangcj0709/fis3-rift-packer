<div id="tab-4" class="tab-pane">
  <form class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-stripped">
        <thead>
        <tr>
          <th>平台</th>
          <th>下载地址</th>
          <th>版本号</th>
          <th>安装包大小</th>
          <th class="w100 text-center">操作</th>
        </tr>
        </thead>
        <tbody>
          {{#each versions}}
            {{> game/edit/templates/_link}}
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group text-right">
      <button class="btn btn-primary pull-left" type="button" data-action="add"><i class="fa fa-link"></i> 新增链接</button>
      <button class="btn btn-white" type="button" data-action="refresh"><i class="fa fa-refresh"></i> 刷新</button>
      <button class="btn btn-primary" type="button" data-action="submit">保存修改</button>
    </div>
    <input type="hidden" name="gameId" value="{{game.id}}">
  </form>
</div>