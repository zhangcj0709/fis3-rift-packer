<div id="tab-2" class="tab-pane">
  <form class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-stripped va-middle">
        <thead>
        <tr>
          <th>预览</th>
          <th>图片URL</th>
          <th>链接</th>
          <th>排序</th>
          <th class="w100 text-center">启用</th>
          <th class="w100 text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        {{#each largePics}}
          <tr data-id="{{id}}">
            <td class="w200"><img src="{{picturePath}}" class="img-preview"><input type="hidden" name="id" value="{{id}}"></td>
            <td><input type="text" class="form-control" disabled value="{{picturePath}}"></td>
            <td><input type="text" class="form-control"name="url" value="{{url}}"></td>
            <td class="w100"><input type="number" class="form-control" name="order" value="{{orderBy}}"></td>
            <td class="w100 text-center">
              <div class="switch d-inline-block va-middle">
                <div class="onoffswitch">
                  <label class="onoffswitch-label">
                    <input type="checkbox"  class="onoffswitch-checkbox" name="enable" value="Y" {{#is enable "Y"}}checked{{/is}}>
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                  </label>
                </div>
              </div>
            </td>
            <td class="w100 text-center">
              <button class="btn btn-danger btn-xs" type="button" data-action="delete"><i class="fa fa-trash"></i> 删除</button>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group text-right">
      <div class="pull-left">
        <button class="btn btn-primary" type="button" data-toggle="customized" data-type="imageUpload" data-url="/goods/banner/upload"><i class="fa fa-cloud-upload"></i> 上传图像</button>
        <div class="d-inline-block va-bottom m-l-sm text-warning">请上传统一尺寸的图片！</div>
      </div>
      <button class="btn btn-white" type="button" data-action="refresh"><i class="fa fa-refresh"></i> 刷新</button>
      <button class="btn btn-primary" type="button" data-action="submit">保存修改</button>
    </div>
    <input type="hidden" name="type" value="home_web_large">
  </form>
</div>