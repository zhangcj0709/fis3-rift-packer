<tr>
  <td class="w50 text-center">{{id}}<input type="hidden" name="id" value="{{id}}"></td>
  {{!--<td><select class="form-control" name="parentCid" data-toggle="select2" data-minimum-results-for-search="Infinity" ></select></td>--}}
  <td><input type="text" class="form-control" name="name" value="{{name}}"></td>
  <td class="w100 text-center">
    <div class="switch d-inline-block va-middle">
      <div class="onoffswitch">
        <label class="onoffswitch-label">
          <input type="checkbox"  class="onoffswitch-checkbox" name="enable" value="Y" {{#is enable "Y"}}checked{{/is}}>
          <span class="onoffswitch-inner"></span>
          <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
  </td>
  <td  class="w100 text-center">
    <div class="btn-group">
      {{#if id}}
        <button class="btn btn-danger btn-xs" type="button" data-action="delete">删除</button>
      {{else}}
        <button class="btn btn-white btn-xs" type="button" data-action="remove">移除</button>
      {{/if}}
      <button class="btn btn-primary btn-xs" type="button" data-action="save">保存</button>
    </div>
  </td>
</tr>