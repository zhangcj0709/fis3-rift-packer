{{#partial "content"}}
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>游戏编辑</h2>
      <ol class="breadcrumb">
        <li><a href="/index">首页</a></li>
        <li><a>游戏管理</a></li>
        <li class="active"><strong>游戏编辑</strong></li>
      </ol>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
      <div class="col-lg-12">
        <div class="tabs-container">
          <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-gamepad"></i> 游戏</a></li>
            {{#if game}}
              <li class=""><a data-toggle="tab" href="#tab-2"><i class="fa fa-edit"></i> 详情编辑</a></li>
              <li class=""><a data-toggle="tab" href="#tab-3"><i class="fa fa-image"></i> 图片管理</a></li>
              <li class=""><a data-toggle="tab" href="#tab-4"><i class="fa fa-link"></i> 地址管理</a></li>
            {{/if}}
          </ul>
          <div class="tab-content">
              {{> game/edit/templates/tab-1}}
              {{#if game}}
                {{> game/edit/templates/tab-2}}
                {{> game/edit/templates/tab-3}}
                {{> game/edit/templates/tab-4}}
              {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
{{/partial}}
