<div id="tab-3" class="tab-pane">
  <form class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-stripped va-middle">
        <thead>
        <tr>
          <th>预览</th>
          <th>URL</th>
          <th class="w100">排序</th>
          <th class="w100 text-center">轮播？</th>
          <th class="w100 text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        {{#each goods.imagesUrl}}
          <tr data-id="{{id}}">
            <td class="w200"><img src="{{picUrl}}" class="img-preview"></td>
            <td><input type="text" class="form-control" disabled value="{{picUrl}}"></td>
            <td class="w100"><input type="text" class="form-control" name="order" value="{{orderBy}}"><input type="hidden" name="id" value="{{id}}"></td>
            <td class="w100 text-center">
              <div class="switch d-inline-block va-middle">
                <div class="onoffswitch">
                  <label class="onoffswitch-label">
                    <input type="checkbox"  class="onoffswitch-checkbox" name="enable" value="Y" {{#is enable "Y"}}checked{{/is}}>
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                  </label>
                </div>
              </div>
            </td>
            <td class="w100 text-center">
              <button class="btn btn-white btn-xs" type="button" data-action="imageDelete"><i class="fa fa-trash"></i> 删除</button>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group text-right">
      <button class="btn btn-primary pull-left" type="button" data-toggle="customized" data-type="imageUpload" data-url="/goods/upload" data-params='{"goodsId":"{{goods.id}}"}'><i class="fa fa-cloud-upload"></i> 上传图像</button>
      <button class="btn btn-white" type="button" data-action="refresh"><i class="fa fa-refresh"></i> 刷新</button>
      <button class="btn btn-primary" type="submit" data-action="button">保存修改</button>
    </div>
    <input type="hidden" name="goodsId" value="{{goods.id}}">
  </form>
</div>