<div id="tab-2" class="tab-pane">
  <form class="panel-body" onsubmit="return false;">
    <div class="row">
      <div class="col-sm-12">
        <input id="content" type="hidden" name="content" value="{{game.content}}">
        <div class="summernote" data-toggle="summernote" data-min-height="224" data-save-target="#content">{{{game.content}}}</div>
      </div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group text-right">
      <button class="btn btn-white" type="button" data-action="refresh"><i class="fa fa-refresh"></i> 刷新</button>
      <button class="btn btn-primary" type="button" data-action="submit">保存修改</button>
    </div>
    <input type="hidden" name="id" value="{{game.id}}">
  </form>
</div>