<table class="table table-hover va-middle" data-pages="{{pages}}" data-page-num="{{pageNum}}" data-page-size="{{pageSize}}">
  <thead>
  <tr>
    <th>编码</th>
    <th>类目</th>
    <th>名称</th>
    <th>销量</th>
    <th>上架时间</th>
    <th>下架时间</th>
    <th class="w50 text-center">状态</th>
    <th class="w100 text-right">操作</th>
    {{!--<th data-breakpoints="all" date-hide="true"></th>--}}
  </tr>
  </thead>
  <tbody>
  {{#each list}}
    <tr>
      <td class="project-title">{{goodsNo}}</td>
      <td class="">{{cname}}</td>
      {{!--<td class="project-people text-center"></td>--}}
      <td class="project-title"><img class="img-sm img-rounded m-r-sm" alt="image" src="{{thumbnail}}">{{title}}</td>
      <td class="">{{saleAmount}}</td>
      <td>{{formatDate onSaleTime "yyyy-MM-dd HH:mm:ss"}}</td>
      <td>{{formatDate saleOutTime "yyyy-MM-dd HH:mm:ss"}}</td>
      <td class="w50 text-center">{{> goods/list/templates/_status}}</td>
      <td class="w100 text-right">
        <div class="btn-group">
          <button name="editBtn" class="btn-white btn btn-xs m-n" data-href="/goods/edit?id={{id}}">编辑</button>
          <button name="viewBtn" class="btn-info btn btn-xs m-n" data-href="/goods/detail/{{id}}">查看</button>
        </div>
      </td>
      {{!--<td data-breakpoints="all"></td>--}}
    </tr>
  {{/each}}
  {{> templates/_table-empty}}
  </tbody>
  <tfoot>
  <tr>
    <td colspan="999">
      <div class="pull-right"><ul class="pagination"></ul></div>
    </td>
  </tr>
  </tfoot>
</table>